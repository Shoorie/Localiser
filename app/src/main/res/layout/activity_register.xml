<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:weightSum="1"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.localiser.RegisterActivity"
    android:background="#ff26ae90">


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="username"
        android:textColor="#222222"
        android:background="#ffffffff"
        android:textColorHint="#999999"
        android:padding="10dp"
        android:ems="11"
        android:id="@+id/login"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="60dp"
        android:textCursorDrawable="@null"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="password"
        android:ems="11"
        android:id="@+id/password"
        android:textColor="#222222"
        android:background="#ffffffff"
        android:textColorHint="#999999"
        android:padding="10dp"
        android:layout_below="@+id/email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:textCursorDrawable="@null"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="e-mail address"
        android:ems="11"
        android:id="@+id/email"
        android:textColor="#222222"
        android:background="#ffffffff"
        android:textColorHint="#999999"
        android:padding="10dp"
        android:layout_below="@+id/login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:textCursorDrawable="@null"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="telephone number"
        android:ems="11"
        android:id="@+id/tnumber"
        android:textColor="#222222"
        android:background="#ffffffff"
        android:textColorHint="#999999"
        android:padding="10dp"
        android:layout_below="@+id/password"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textCursorDrawable="@null"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Register account"
        android:background="@xml/button_selector"
        android:textColor="#26ae90"
        android:id="@+id/button7"
        android:layout_above="@+id/button9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="registerAccount"
        android:layout_marginBottom="1dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Back to sign in"
        android:id="@+id/button9"
        android:background="@xml/button_selector"
        android:textColor="#26ae90"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="backToSignIn"/>

</RelativeLayout>
